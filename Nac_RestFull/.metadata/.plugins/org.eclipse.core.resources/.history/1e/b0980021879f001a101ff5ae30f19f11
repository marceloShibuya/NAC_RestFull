		if(listaVendaTO == null) {
			listaVendaTO = new ArrayList<VendaTO>();
			
			VendaTO vto = new VendaTO();
			vto.setCodigo(1);
			vto.setNome("Marcelo Shibuya");
			vto.setDtVenda(new GregorianCalendar(1,Calendar.JANUARY,2020));
			vto.setDescricao("Camiseta");
			vto.setValor(100.00);
