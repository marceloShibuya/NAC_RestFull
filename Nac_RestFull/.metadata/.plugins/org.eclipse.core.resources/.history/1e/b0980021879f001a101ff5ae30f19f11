			vto.setNome("Bianca Rosse");
			vto.setDtVenda(new GregorianCalendar(10,Calendar.OCTOBER,2020));
			vto.setDescricao("Vestido");
			vto.setValor(279.00);
			vto.setStatus(true);
			
		}
	}
	
	
	public List<VendaTO> select(){
		return listaVendaTO;
	}
	
	public VendaTO select(int cod) {
		for(int x = 0;x < listaVendaTO.size();x++) {
			if(listaVendaTO.get(x).getCodigo() == cod) {
				return listaVendaTO.get(x);
			}
		}
		return null;
	}
	
	public boolean insert(VendaTO venda) {
		
		if(venda != null) {
			venda.setCodigo((listaVendaTO.get(listaVendaTO.size()-1).getCodigo()+1));
			return listaVendaTO.add(venda);
		}
		return false;
	}
	
	public boolean update(VendaTO venda) {
		
		if(venda != null) {
			for(int x = 0;x < listaVendaTO.size();x++) {
				if(listaVendaTO.get(x).getCodigo() == venda.getCodigo()) {
					listaVendaTO.set(x, venda);
					return true;
				}
			}
		}
		return false;
	}
	
	public void delete(int cod) {
		for(int x = 0;x < listaVendaTO.size();x++) {
			if(listaVendaTO.get(x).getCodigo() == cod) {
				listaVendaTO.remove(x);
			}
		}
	}
	
}
